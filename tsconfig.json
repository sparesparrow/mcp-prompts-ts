{
  "files": [],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/adapters-file" },
    { "path": "./packages/adapters-memory" },
    { "path": "./apps/server" }
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@adapters/*": ["packages/*/src/*"]
    }
  }
}
